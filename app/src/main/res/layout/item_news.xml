<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_news"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_news_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="Wed Mar 16 16:25:12 2022"
        android:textColor="@color/semi_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_news_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_news"
        app:layout_constraintTop_toTopOf="@id/ic_news" />

    <TextView
        android:id="@+id/tv_news_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="sad as asd a sfg a g adfh sgbs b dfb sdfb sdaf afga sgasv a vaf vadfvab gsbg bgsd "
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/ic_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_news"
        app:layout_constraintTop_toBottomOf="@id/tv_news_time" />
</androidx.constraintlayout.widget.ConstraintLayout>